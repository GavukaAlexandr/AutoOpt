{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },

  "moduleNameMapper": {
    "@app/prisma/(.*)": "<rootDir>../../../libs/db/src/$1",
    "@app/prisma":      "<rootDir>../../../libs/db/src"
  }
}
